<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">
        Edit <%= blog.title %>
    </div>
    <form action="/blogs/<%= blog._id %>?_method=put" method="post" class="ui form">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" id="title" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" id="image" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="body">Content</label>
            <textarea name="blog[body]" id="body">
                <%= blog.body %>
            </textarea>
        </div>
        <input type="submit" class="ui big blue basic button">
    </form>
</div>
<%- include("partials/footer") %>
