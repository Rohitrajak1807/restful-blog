<%- include("partials/header") %>
<div class="ui main text container">
    <div class="ui header huge">
        <%= blog.title %>
    </div>
    <div class="ui top attached segment">
        <div class="item">
            <img src="<%= blog.image %>" alt="<%= blog.title %>" class="ui image centered rounded" id="blog-image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p>
                    <%- blog.body%>
                </p>

            </div>
            <a href="/blogs/<% blog._id %>/edit" class="ui button green">Edit</a>
            <form action="/blogs/<%= blog._id %>?_method=delete" method="post" id="delete">
                <button class="ui red button ">Delete</button>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>
