<%- include("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog
    </div>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" id="title" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" id="image" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label for="body">Content</label>
            <textarea name="blog[body]" id="body"></textarea>
        </div>

        <input type="submit" class="ui big blue basic button">
    </form>
</div>
<%- include("partials/footer") %>